{erl_opts, [warn_unused_vars,
               warn_export_all,
               warn_export_vars,
               warn_shadow_vars,
               warn_unused_import,
               warn_unused_function,
               warn_bif_clash,
               warn_unused_record,
               warn_deprecated_function,
               warn_obsolete_guard,
               warn_untyped_record,
               warn_missing_spec, strict_validation, report, debug_info]}.
{cover_enabled, true}.
{edoc_opts, [{report_missing_types, true}]}.
{xref_checks, [undefined_function_calls]}.
{deps, [
       {gen_httpd, ".*", {git, "https://github.com/embrus/gen_httpd.git", "master"}}
       ]}.